<Window x:Class="VRChatProximityApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VRChatProximityApp"
        xmlns:conv="clr-namespace:VRChatProximityApp.Converters"
        mc:Ignorable="d"
        Title="VRChat Proximity Visibility Controller" Height="600" Width="900" 
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E" Foreground="White">
    
    <Window.Resources>
        <conv:BoolToConnectionBrushConverter x:Key="BoolToConnectionBrushConverter"/>
        <conv:BoolToConnectionTextConverter x:Key="BoolToConnectionTextConverter"/>
        <conv:BoolToStatusConverter x:Key="BoolToStatusConverter"/>
        <conv:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="VRChat Proximity Visibility Controller" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"
                   Foreground="#00BFFF"/>
        
        <!-- Connection Status -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="VRChat Connection: " FontSize="14"/>
            <Ellipse Width="10" Height="10" Margin="5,0" VerticalAlignment="Center"
                     Fill="{Binding IsConnected, Converter={StaticResource BoolToConnectionBrushConverter}}"/>
            <TextBlock Text="{Binding IsConnected, Converter={StaticResource BoolToConnectionTextConverter}}" 
                       FontSize="14" FontWeight="Bold"/>
        </StackPanel>
        
        <!-- Controls -->
        <Grid Grid.Row="2" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Sight Distance Control -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="Sight Distance (meters)" FontSize="14" Margin="0,0,0,5"/>
                <Slider Name="SightDistanceSlider" 
                        Minimum="0.1" Maximum="50" 
                        Value="{Binding SightDistance, Mode=TwoWay}"
                        TickPlacement="BottomRight" TickFrequency="5"
                        IsSnapToTickEnabled="False" 
                        Margin="0,0,20,0"/>
                <TextBlock Text="{Binding SightDistance, StringFormat='{}{0:F1}m'}" 
                           FontSize="16" FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Foreground="#00BFFF"/>
            </StackPanel>
            
            <!-- Control Buttons -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20,0">
                <Button Name="StartButton" Content="Start" 
                        Padding="20,10" FontSize="14" FontWeight="Bold"
                        Click="StartButton_Click"
                        IsEnabled="{Binding IsEnabled, Converter={StaticResource InverseBooleanConverter}}"
                        Background="#00AA00" Foreground="White" 
                        BorderBrush="#00DD00" BorderThickness="2"
                        Margin="0,0,0,10"/>
                <Button Name="StopButton" Content="Stop" 
                        Padding="20,10" FontSize="14" FontWeight="Bold"
                        Click="StopButton_Click"
                        IsEnabled="{Binding IsEnabled}"
                        Background="#AA0000" Foreground="White" 
                        BorderBrush="#DD0000" BorderThickness="2"/>
            </StackPanel>
            
            <!-- Statistics -->
            <StackPanel Grid.Column="2">
                <TextBlock Text="Statistics" FontSize="14" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <TextBlock Text="Total Users: " FontSize="12"/>
                    <TextBlock Text="{Binding AllUsers.Count}" FontSize="12" FontWeight="Bold" Foreground="#00BFFF"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <TextBlock Text="Visible Users: " FontSize="12"/>
                    <TextBlock Text="{Binding VisibleUsers.Count}" FontSize="12" FontWeight="Bold" Foreground="#00FF00"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <TextBlock Text="Player Position: " FontSize="12"/>
                    <TextBlock Text="{Binding PlayerPosition}" FontSize="12" FontFamily="Consolas"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        
        <!-- User Lists -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- All Users List -->
            <GroupBox Grid.Column="0" Header="All Users" Margin="0,0,10,0" 
                      Foreground="White" BorderBrush="#555">
                <DataGrid Name="AllUsersGrid" 
                          ItemsSource="{Binding AllUsers}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserReorderColumns="True"
                          CanUserResizeColumns="True"
                          Background="#2E2E2E"
                          Foreground="White"
                          BorderBrush="#555"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#444"
                          HeadersVisibility="Column"
                          AlternatingRowBackground="#333">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding DisplayName}" Width="*"/>
                        <DataGridTextColumn Header="Distance" Binding="{Binding DistanceFromPlayer, StringFormat='{}{0:F1}m'}" Width="70"/>
                        <DataGridCheckBoxColumn Header="Visible" Binding="{Binding IsVisible}" Width="60"/>
                        <DataGridCheckBoxColumn Header="Connected" Binding="{Binding IsConnected}" Width="70"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
            
            <!-- Visible Users List -->
            <GroupBox Grid.Column="1" Header="Visible Users" Margin="10,0,0,0" 
                      Foreground="White" BorderBrush="#555">
                <ListBox Name="VisibleUsersListBox" 
                         ItemsSource="{Binding VisibleUsers}"
                         Background="#2E2E2E"
                         Foreground="White"
                         BorderBrush="#555">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <Ellipse Width="8" Height="8" Fill="#00FF00" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <StackPanel>
                                    <TextBlock Text="{Binding DisplayName}" FontWeight="Bold" FontSize="14"/>
                                    <TextBlock Text="{Binding DistanceFromPlayer, StringFormat='Distance: {0:F1}m'}" 
                                               FontSize="12" Foreground="#CCCCCC"/>
                                    <TextBlock Text="{Binding Position, StringFormat='Position: {0}'}" 
                                               FontSize="10" Foreground="#999" FontFamily="Consolas"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </GroupBox>
        </Grid>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="4" Background="#333" Foreground="White" 
                   BorderBrush="#555" BorderThickness="1,1,1,0">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage, FallbackValue='Ready to connect to VRChat'}" FontSize="12"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding IsEnabled, Converter={StaticResource BoolToStatusConverter}}" FontSize="12"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
